{
    "name": "开播啦",
    "description" : "关注的主播开播提醒,以及显示当前在直播的订阅主播,支持斗鱼、虎牙、哔哩哔哩",
    "version": "1.0.0",
    "author": "daochouwangu@github.com",
    "manifest_version": 2,
    "background": {
      "page": "./index.html"
    },
    "browser_action": {
      "default_popup": "popup.html",
      "default_icon": "icon.png",
      "default_title": "看看谁在直播"
    },
    "icons": {
      "16": "./icon.png",
      "32": "./icon.png",
      "48": "./icon.png",
      "128": "./icon.png"
    },
    "permissions": [
      "https://*.douyu.com/*",
      "http://*.douyu.com/*",
      "https://*.bilibili.com/*",
      "http://*.bilibili.com/*",
      "https://*.huya.com/*",
      "http://*.huya.com/*",
      "cookies",
      "notifications"
    ]
  }
